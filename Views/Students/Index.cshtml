@model IEnumerable<Student>
@{
    ViewBag.Title = "Student_List";
}

  
    <section class="container">
        <div id="TBL">
        <a asp-action="create" asp-controller="students" id="Hlink" target="_blank" class="btn">
            Add More ++
            <span class="badge bg-black">@Model.Count()</span>
        </a>
        <table id="TBL" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Degree</th>
                    <th scope="col">
                        Department
                        <a asp-action="CreateDepartment" asp-controller="Department" class="btn btn-dark" >
                            👉 Add
                        </a>
                        <a asp-action="Indexdepartment" asp-controller="Department" class="btn btn-dark" >
                            👉 View
                        </a>
                        
                </th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
               <tr>
                    <td class="Row1">@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Degree</td>
                    <td>@item.Department.Dept_Name</td>
                    @* <td>
                        <a class="btn btn-primary" href="/students/Details/@item.Id">
                            Details
                        </a>
                        <a class="btn btn-danger" href="/students/Delete/@item.Id" 
                            onclick="return confirm('Are you sure')">
                            Delete
                            
                        </a>
                    </td> *@
                    <td>
                        <div class="btn-group">
                            <a asp-action="details" asp-controller="students" asp-route-id="@item.Id" class="btn btn-primary" >
                                    Details👉
                            </a>
                                <a asp-action="delete" asp-controller="students" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                                    Delete🚫 
                            </a>
                                <a asp-action="update" asp-controller="students" asp-route-id="@item.Id" class="btn btn-success" >
                                    Update👉
                            </a>
                        </div>
                    </td>
               </tr>
            }
        </tbody>
            </table>
        </div>
    </section>

    @section Styles_Index{

    <link href="~/css/index.css" rel="stylesheet" />
    }


